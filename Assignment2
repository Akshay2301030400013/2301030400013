    <script>
        function showSection(sectionId) {
            document.querySelectorAll('.container, .blog-container, .learning-container, .exercise-container').forEach(section => {
                section.style.display = 'none';
            });
            document.getElementById(sectionId).style.display = 'flex';
        }
    </script>

